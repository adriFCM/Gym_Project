<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.MemberDashboardController">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="welcomeLabel"
                   text="Member dashboard"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Logout"
                    onAction="#onLogoutClicked"/>
        </HBox>
    </top>

    <!-- Center content -->
    <center>
        <VBox spacing="20" alignment="CENTER"
              style="-fx-padding: 40;">
            <!-- Next class card -->
            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-background-radius: 10;">
                <Label text="Your next class"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="nextClassLabel"
                       text="No upcoming classes"
                       style="-fx-font-size: 14px;"/>
            </VBox>

            <!-- Actions -->
            <Button text="Book a class"
                    prefWidth="220"
                    onAction="#onBookClassClicked"/>

            <Button text="My bookings"
                    prefWidth="220"
                    onAction="#onMyBookingsClicked"/>

            <Button text="My progress"
                    prefWidth="220"
                    onAction="#onProgressClicked"/>
        </VBox>
    </center>
</BorderPane>
