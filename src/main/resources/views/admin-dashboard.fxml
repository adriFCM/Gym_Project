<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.AdminDashboardController"
            styleClass="app-root">

    <!-- Top bar: title + logout -->
    <top>
        <HBox spacing="10"
              alignment="CENTER_LEFT"
              style="-fx-padding: 18 24 12 24;">
            <children>
                <Label fx:id="welcomeLabel"
                       text="ADMIN DASHBOARD"
                       styleClass="screen-title"/>

                <Pane HBox.hgrow="ALWAYS"/>

                <Button text="Logout"
                        onAction="#onLogoutClicked"
                        styleClass="secondary-btn"/>
            </children>
        </HBox>
    </top>

    <!-- Center: hero + title + tiles -->
    <center>
        <VBox alignment="TOP_CENTER"
              styleClass="screen-container">
            <children>

                <!-- HERO IMAGE CARD -->
                <VBox alignment="CENTER"
                      styleClass="hero-card"
                      maxWidth="800">
                    <children>
                        <ImageView fitWidth="760"
                                   fitHeight="220"
                                   preserveRatio="true"
                                   pickOnBounds="true"
                                   smooth="true">
                            <image>
                                <!-- FXML is in /views, image is in /images -->
                                <Image url="@../images/admin-hero.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </VBox>


                <!-- Centered question -->
                <VBox alignment="CENTER" spacing="4">
                    <children>
                        <Label text="What do you want to manage?"
                               styleClass="screen-title"/>
                        <Label text="Choose a section to configure your gym."
                               styleClass="screen-subtitle"/>
                    </children>
                </VBox>

                <!-- Tiles inside a card -->
                <VBox alignment="CENTER"
                      styleClass="card"
                      maxWidth="800">
                    <children>
                        <GridPane hgap="18" vgap="18">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                            </rowConstraints>

                            <children>

                                <!-- Manage classes (highlighted) -->
                                <Button GridPane.rowIndex="0" GridPane.columnIndex="0"
                                        onAction="#onManageClassesClicked"
                                        maxWidth="Infinity"
                                        styleClass="tile-btn-primary">
                                    <graphic>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="â˜°" styleClass="tile-icon"/>
                                                <Label text="Manage classes"/>
                                            </children>
                                        </HBox>
                                    </graphic>
                                </Button>

                                <!-- Manage schedules -->
                                <Button GridPane.rowIndex="0" GridPane.columnIndex="1"
                                        onAction="#onManageSchedulesClicked"
                                        maxWidth="Infinity"
                                        styleClass="tile-btn-secondary">
                                    <graphic>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="ðŸ“…" styleClass="tile-icon"/>
                                                <Label text="Manage schedules"/>
                                            </children>
                                        </HBox>
                                    </graphic>
                                </Button>

                                <!-- View all bookings -->
                                <Button GridPane.rowIndex="1" GridPane.columnIndex="0"
                                        onAction="#onViewBookingsClicked"
                                        maxWidth="Infinity"
                                        styleClass="tile-btn-secondary">
                                    <graphic>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="âœ”" styleClass="tile-icon"/>
                                                <Label text="View all bookings"/>
                                            </children>
                                        </HBox>
                                    </graphic>
                                </Button>

                                <!-- Manage users -->
                                <Button GridPane.rowIndex="1" GridPane.columnIndex="1"
                                        onAction="#onViewMembersClicked"
                                        maxWidth="Infinity"
                                        styleClass="tile-btn-secondary">
                                    <graphic>
                                        <HBox alignment="CENTER_LEFT" spacing="8">
                                            <children>
                                                <Label text="ðŸ‘¤" styleClass="tile-icon"/>
                                                <Label text="Manage users"/>
                                            </children>
                                        </HBox>
                                    </graphic>
                                </Button>

                            </children>
                        </GridPane>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

</BorderPane>
