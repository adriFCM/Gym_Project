<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gym.ui.controllers.BookingController">

    <top>
        <VBox spacing="8" style="-fx-padding: 16;">
            <!-- first row: back + title + date -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Button text="â† Back" onAction="#onBackClicked"/>
                <Label text="Book your next class"
                       style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <Label text="Date:"/>
                <DatePicker fx:id="datePicker"/>
                <Button text="Clear" onAction="#onClearDateClicked"/>
            </HBox>

            <!-- second row: search -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Search:"/>
                <TextField fx:id="searchField"
                           promptText="Filter by class, instructor or date..."/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: table with schedules -->
    <center>
        <VBox spacing="8" style="-fx-padding: 0 16 16 16;">
            <TableView fx:id="scheduleTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="130"/>
                    <TableColumn fx:id="classNameColumn" text="Class" prefWidth="180"/>
                    <TableColumn fx:id="instructorColumn" text="Instructor" prefWidth="150"/>
                    <TableColumn fx:id="focusColumn" text="Focus" prefWidth="160"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="110"/>
                    <TableColumn fx:id="spotsColumn" text="Available spots" prefWidth="120"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT">
                <Label fx:id="selectionLabel"
                       text="Select a class from the list"
                       style="-fx-text-fill: #666;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Confirm class" onAction="#onConfirmClicked"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
