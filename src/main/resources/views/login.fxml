<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gym.ui.controllers.LoginController"
      styleClass="app-root"
      style="-fx-padding: 30;">

    <children>
        <!-- Card centrada, con ancho máximo fijo -->
        <VBox alignment="CENTER"
              spacing="16"
              styleClass="login-card"
              prefWidth="360"
              maxWidth="360">
            <children>

                <!-- Título -->
                <Label text="GYM LOGIN" styleClass="login-title"/>

                <!-- Inputs -->
                <TextField fx:id="usernameField"
                           promptText="Username"
                           prefWidth="260"/>

                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               prefWidth="260"/>

                <!-- Error -->
                <Label fx:id="errorLabel"
                       textFill="red"/>

                <!-- Botón Login (ancho fijo, no se estira) -->
                <Button text="Login"
                        onAction="#onLoginClicked"
                        defaultButton="true"
                        prefWidth="260"
                        styleClass="primary-btn"/>

                <!-- Botón Register (ancho fijo, no se estira) -->
                <Button text="Register"
                        onAction="#onRegisterClicked"
                        prefWidth="260"
                        styleClass="secondary-btn"/>

            </children>
        </VBox>
    </children>

</VBox>
